<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screenbg"
    android:weightSum="2"
    tools:context="loyaltywallet.com.Fragments.HomeFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:weightSum="2"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/mymemberships"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/lightblue"
        android:clickable="true"
        android:elevation="@dimen/appbar_padding_top"
        android:onClick="onHomeItemClick"
        app:cardCornerRadius="4dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tint="#375E97"
                app:srcCompat="@drawable/ic_card_membership_black_24dp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/my_memberships"
                android:textAlignment="center"
                android:textColor="#375E97" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/addmembership"
        android:layout_width="match_parent"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/lightblue"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:onClick="onHomeItemClick"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        android:layout_height="match_parent">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tint="#FB6542"
                app:srcCompat="@drawable/ic_add_box_black_24dp"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#FB6542"
                android:textAlignment="center"
                android:text="@string/add_membership"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:weightSum="2"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/myprofile"
        android:layout_width="match_parent"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/lightblue"
        android:background="@android:color/transparent"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:onClick="onHomeItemClick"
        android:layout_margin="4dp"
        android:layout_height="match_parent">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tint="#FFBB00"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_account_box_black_24dp"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFBB00"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="@string/my_profle"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/offers"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:clickable="true"
    android:onClick="onHomeItemClick"
        app:cardBackgroundColor="@color/lightblue"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    android:layout_height="match_parent">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="#386F1C"
            app:srcCompat="@drawable/ic_card_giftcard_black_24dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#386F1C"
            android:textAlignment="center"
            android:text="@string/offers"/>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>
</LinearLayout>
</LinearLayout>
